<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>

        <!-- Tree View -->

        <record id="view_pet_tree" model="ir.ui.view">
            <field name="name">Pet Tree</field>
            <field name="model">pet.store</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="breed"/>
                    <field name="price"/>
                    <field name="compute_value"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_pet_form" model="ir.ui.view">
            <field name="name">Pet Form</field>
            <field name="model">pet.store</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="breed"/>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="compute_value"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</odoo>